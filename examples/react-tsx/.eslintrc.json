{
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "pv"
  ],
  "parser":  "@typescript-eslint/parser",
  "env": {
    "node": true,
    "browser": true
  },
  "root": true,
  "rules": {
    "global-require": 0,
    "no-console": "off",
    // note you must disable the base rule as it can report incorrect errors
    "no-use-before-define": "off",
  },
  "settings":  {
    "react":  {
      "version":  "detect"
    }
  }
}
